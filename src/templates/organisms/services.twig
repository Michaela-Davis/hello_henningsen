<section id="section-services">

    <div class="feature">
        <div class="container">
            <div class="row">
                <div class="col-sm-6 card">
                    <img src="/assets/services/dentures.jpg" alt="Dentures" class="feature__image">
                    <div class="card__text">
                        <div class="col-xs-7 col-sm-8">
                            <h3 class="feature__title hidden-xs">Cosmetic Dentures</h3>
                            <h3 class="feature__title hidden-sm hidden-md hidden-lg"> Dentures</h3>
                        </div>
                        <div class="col-xs-3">
                            <p class="card__link">Learn More</p>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 card">
                    <img src="/assets/services/apnea.jpg" alt="Sleep Apnea Treatment" class="feature__image">
                    <div class="card__text">
                        <div class="col-xs-7 col-sm-8">
                            <h3 class="feature__title hidden-xs hidden-sm">Sleep Apnea Treatment</h3>
                            <h3 class="feature__title hidden-xs hidden-md hidden-lg">Apnea Treatment</h3>
                            <h3 class="feature__title hidden-sm hidden-md hidden-lg">Treat Apnea</h3>
                        </div>
                        <div class="col-xs-3">
                            <p class="card__link">Learn More</p>
                        </div>
                    </div>
                 </div>
            </div>
        </div>
    </div>

    <div class="main">
        <div class="container">
            <div class="row">
                {% for service in services %}
                <div class="col-sm-6 col-md-4 card" data-target="#modal--{{ service.modalTarget }}" data-toggle="modal"><img src="/assets/services/{{ service.image }}.jpg" alt="{{ service.titleFull }}" class="card__image">
                    <div class="card__text">
                        <div class="col-xs-7 col-sm-8 col-md-7">
                            <h5 class="card__title hidden-xs hidden-sm">{{ service.title }}</h5>
                            <h5 class="card__title hidden-md hidden-lg">{{ service.titleMobil }}</h5>
                        </div>
                        <div class="col-xs-2">
                            <p class="card__link">Learn More</p>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>

    {% include 'molecules/services__modals.twig' %}

</section>
